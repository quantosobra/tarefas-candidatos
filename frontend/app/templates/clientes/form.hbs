<div class="panel panel-info">
    <div class="panel-heading">
        <h2>
            {{#link-to 'clientes' active=false}}
            <i class="fa fa-angle-left"></i>{{/link-to}}
            <i class="fa fa-user"></i>
            {{#if model.isNew}} Novo Cliente {{else}} Editar Cliente {{/if}}
        </h2>
    </div>
    <div class="panel-body">
        {{#bs-form model=model action="submit" as |form|}}
        <div class="row">
            <div class="col-sm-12">
                {{form.element label="Nome" placeholder="Nome" property="nome"}}
            </div>
            <div class="col-sm-12">
                {{#if serverErrors.nome}}
                <div class="form-group has-error">
                    {{#each serverErrors.nome.errors as |errorMessage|}}
                    <label class="control-label" for="inputError">{{errorMessage}}</label>
                    <br/> {{/each}}
                </div>
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-12">
                        {{form.element label="Telefone" placeholder="Telefone" property="telefone"}}
                    </div>
                    <div class="col-sm-12">
                        {{#if serverErrors.telefone}}
                        <div class="form-group has-error">
                            {{#each serverErrors.telefone.errors as |errorMessage|}}
                            <label class="control-label" for="inputError">{{errorMessage}}</label>
                            <br/> {{/each}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-12">
                        {{form.element label="E-mail" placeholder="E-mail" property="email"}}
                    </div>
                    <div class="col-sm-12">
                        {{#if serverErrors.email}}
                        <div class="form-group has-error">
                            {{#each serverErrors.email.errors as |errorMessage|}}
                            <label class="control-label" for="inputError">{{errorMessage}}</label>
                            <br/> {{/each}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{form.element label="Endereço" placeholder="Endereço" property="endereco"}}
            </div>
            <div class="col-sm-12">
                {{#if serverErrors.endereco}}
                <div class="form-group has-error">
                    {{#each serverErrors.endereco.errors as |errorMessage|}}
                    <label class="control-label" for="inputError">{{errorMessage}}</label>
                    <br/> {{/each}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/bs-form}}
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-12 text-right">
                <button class="btn btn-success" {{action "submit"}}>Salvar</button>
            </div>
        </div>
    </div>
</div>